
    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farcas_Diana_Lab10.ListEntryPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Shopping List" Clicked="OnShopListAddedClicked" />
    </ContentPage.ToolbarItems>
        
    <ListView x:Name="listView" Margin="20" ItemSelected="OnListViewItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Description}" Detail="{Binding Date}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>